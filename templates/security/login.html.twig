{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <h1 class="h1-font-size text-center my-5">Veuillez vous connecter</h1>
    <div class="d-flex justify-content-center align-items-center flex-column">
        <div class="card col-10 background-color-green-light">
            <form method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                    </div>
                {% endif %}

                <div class="d-flex justify-content-center align-items-center flex-column col-12 my-3">
                    <label for="inputEmail my-3" class="label-search">Email</label>
                    <input type="email" value="{{ last_username }}" name="inputEmail" id="inputEmail" class="my-3 rounded-2 background-color-grey" autocomplete="email" required autofocus>
                    <label for="inputPassword my-3" class="label-search">Password</label>
                    <input type="password" name="inputPassword" id="inputPassword" class="my-3 rounded background-color-grey" autocomplete="current-password" required>

                    <input type="hidden" name="_csrf_token" class=""
                           value="{{ csrf_token('authenticate') }}"
                    >
                </div>
                {#
                    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                    See https://symfony.com/doc/current/security/remember_me.html

                    <div class="checkbox mb-3">
                        <label>
                            <input type="checkbox" name="_remember_me"> Remember me
                        </label>
                    </div>
                #}
                <div class="d-flex justify-content-center align-items-center my-3">
                    <button class="btn btn-lg btn-primary" type="submit">
                        Sign in
                    </button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
