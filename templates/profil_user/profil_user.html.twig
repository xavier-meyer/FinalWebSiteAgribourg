{% extends 'base.html.twig' %}

{% block title %} ProfileController{% endblock %}

{% block body %}
    <h1 class="h1-font-size text-center my-5 main-color">Votre profil</h1>
    <div class="row d-flex justify-content-center align-items-center">
        <div class="card d-flex justify-content-center align-items-center background-secondary-color col-10 col-sm-8 col-md-6 col-xl-4">
            <div class="card-body p-3">
                <h3 class="card-title">Informations générales:</h3>
                <div class="card-text my-3">
                    <p class="p_page_profil"><span class="fw-bold">votre email:</span><br>{{ app.user.email }}</p>
                    <p><span class="fw-bold">votre prénom:</span><br>{{ app.user.prenom }}</p>
                    <p><span class="fw-bold">votre nom:</span><br>{{ app.user.nom }}</p>
                    <p><span class="fw-bold">votre téléphone:</span><br>{{ app.user.telephone }}</p>
                </div>
            </div>
        </div>
    </div>
    <div class="row d-flex justify-content-center align-items-center my-5">
        <h1 class="h1-font-size text-center my-5 main-color">Vos commandes</h1>
        <div class="card background-secondary-color col-10 col-sm-8">
            {# tableau commande produits#}
            <div>
                <table class="table rounded">
                    <thead class="background-main-color rounded-2">
                    <tr>
                        <th scope="col" class="text-color-card-products col-1">nom</th>
                        <th scope="col" class="text-color-card-products col-1">PrixTTC</th>
                        <th scope="col" class="text-color-card-products col-1">quantité</th>
                    </tr>
                    </thead>
                    {%  for item in totalProductsPrice %}
                        {%  if  app.user == item.user %}
                            <tbody class="background-secondary-color">
                            <tr>
                                <td>{{ item.commandProductName }}</td>
                                <td>{{ item.commandProductPrice }}€</td>
                                <td>{{ item.commandProductQuantity}}{{ item.commandProductPriceUnit }}</td>
                            </tr>
                            </tbody>
                            <tfoot class="background-main-color">
                            <tr>
                                {%  if loop.last %}
                                    <th class="text-color-card-products" scope="col">Total</th>
                                    <th class="text-color-card-products" scope="col">{{ item.commandTotalPrice }}€ </th>
                                {%  endif %}
                            </tr>
                            </tfoot>
                        {%  endif %}
                    {%  endfor %}
                </table>
            </div>
            {# fin section tableau commande produit#}
        </div>
    </div>
    <div class="mt-5 d-flex justify-content-around align-items-center">
        <a href="{{ path('app_command') }}"  type="button" class="button_go_back text-color-card-products">aller à la page commande</a>
    </div>
{% endblock %}

