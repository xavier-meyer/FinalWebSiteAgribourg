{% extends 'base.html.twig' %}

{% block title %}SearchProductsController!{% endblock %}
{% block body %}
    <h1 class="h1-font-size text-center my-5">Nos Fruits</h1>
    <div class="d-flex justify-content-center align-items-center flex-column flex-sm-row justify-content-lg-around my-5">
        <a href="{{ path("app_search_products") }}" type="button" class="btn btn-search-fruits my-3 my-md-0">Fruits</a>
        <a href="{{ path("app_search_products_vegetables") }}" type="button" class="btn btn-search-legumes my-3 my-md-0">Légumes</a>
        <a href="{{ path("app_search_products_basket") }}"class="btn btn-search-paniers my-3 my-md-0">Nos paniers</a>
    </div>
    <form class="d-flex justify-content-center align-items-center flex-column flex-md-row mt-5" action="{{ path('app_search') }}">
        <label class="label-search my-2 my-md-0 me-md-2"  for="name">Rechercher un produit</label>
        <input class="input-search my-3 my-md-0 me-md-2" type="text" id="name" name="name">
        <input class="input-search-submit my-3 my-md-0" type="submit" value="rechercher">
    </form>
    <div class="mt-5 w-auto">
        {#  on affiches un message d'erreur grace à la variable 'message_error' passé en paramétre à la vue twig si aucun résultat trouvé#}
        {% if error_message is defined %}
            <div class="alert alert-success text-div-alert">{{ error_message }}</div>
        {% endif %}
    </div>
    <div class="row d-flex justify-content-center justify-content-md-center align-items-center my-5">
        {% for item in articlesFrut %}
            <div class="card cards_hover col-8 col-sm-6 col-md-4 col-lg-3 col-xl-2 me-3 my-4">
                <img src="{{ asset("build/images/"~item.artimage~"") }}" class="card-img-top" alt="">

                {# on indique la page sur laquelle on envoyes les données via la root et on précises l'id pour le controlleur#}
                <a class="link-product" href="{{ path('app_details_products', {'id': item.id}) }}">Voir le produit</a>
                <div class="card-body background-color-green">
                    <h3 class="card-title text-white">
                        {{ item.artnomproduit |nombre_characteres_nom_produit }}
                    </h3>
                    <div class="d-flex justify-content-between my-2">
                        <div>
                            {#  conditions si le produit est en promotion #}
                            {#  on utilises les valeurs des propriétés définies dans l'entité article en Base de données pour sélectionner le prix à afficher #}
                            {% if item.artprixpromo is not null and item.artprixunitaire is null %}
                                <p class="card-text text-white">{{ item.artprixpromo }}€/kg</p>
                            {% elseif item.artprixpromo is not null and item.artprixunitaire is not null %}
                                <p class="card-text text-white">{{ item.artprixpromo }}€/pièce</p>
                            {% elseif item.artprixpromo is not null and item.artprixunitaire is not null and item.catproduit == "3" %}
                                <p class="card-text text-white">{{ item.artprixpromo }}€/panier</p>
                            {% elseif item.artprixpromo is not null and item.artprixaukg is null and item.artprixunitaire is not null %}
                                <p class="card-text text-white">{{ item.artprixpromo }}€/pièce</p>
                            {% elseif item.artprixpromo is not null and item.artprixaukg is null and item.artprixunitaire is not null %}
                                <p class="card-text text-white">{{ item.artprixpromo }}€/pièce</p>

                                {# conditions si le produit n'est pas en promotion #}
                            {% elseif item.artprixpromo is null and item.artprixaukg is not null %}
                                <p class="card-text text-white">{{ item.artprixaukg }}€/kg</p>
                            {% elseif item.artprixpromo is null and item.artprixaukg is null and item.artprixunitaire is not null and item.artnomproduit == "Radis roses BIO" %}
                                <p class="card-text text-white">{{ item.artprixunitaire }}€/botte</p>
                            {% elseif item.artprixpromo is null and item.artprixaukg is null and item.artprixunitaire is not null and item.artnomproduit == "Asperges BIO" or item.artnomproduit == "Petit pois BIO" %}
                                <p class="card-text text-white">{{ item.artprixunitaire }}€/bocal</p>
                            {% elseif item.artprixpromo is not null and item.artprixunitaire is not null and item.catproduit == "3" %}
                                <p class="card-text text-white">{{ item.artprixunitaire }}€/panier</p>
                            {% elseif item.artprixpromo is null and item.artprixaukg is null and item.artprixunitaire is not null %}
                                <p class="card-text text-white">{{ item.artprixunitaire }}€/pièce</p>
                            {% endif %}
                        </div>
                        <div>
                            {% if item.artremise is not null %}
                                <p class="card-promo text-white">-{{ item.artremise }}%</p>
                            {% endif %}
                        </div>
                    </div>
                    {# lien pour envoyer les produits selectionnés à la page panier#}
                    <a href="#" class="btn btn-button-card d-flex justify-content-between align-items-center my-2 my-lg-0">
                        <img src="{{ asset("build/images/cart_white.png") }}" class="icon-card me-3" alt="moyen d'ajouter des articles au panier">Ajouter au panier</a>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}

