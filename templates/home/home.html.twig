{% extends 'base.html.twig' %}

{% block title %}HomeController!{% endblock %}

{% block body %}
    <div id="carouselProductsHome" class="carousel slide mt-3" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active" data-bs-interval="5000">
                <img src="{{ asset("build/images/panier_legumes.jpg") }}" class="d-block w-100 img-carrousel" alt="panier de légumes frais">
            </div>
            <div class="carousel-item" data-bs-interval="5000">
                <img src="{{ asset("build/images/panier_fruits.jpg") }}" class="d-block w-100 img-carrousel" alt="panier de fruits">
            </div>
            <div class="carousel-item">
                <img src="{{ asset("build/images/panier_de_legumes_autre.jpg") }}" class="d-block w-100 img-carrousel" alt="panier de légumes frais">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselProductsHome" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselProductsHome" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
    <p class="my-5 text-center fw-bold p-carrousel" >Venez découvrir nos paniers de fruits et légumes frais</p>
    <h2 class="my-5 text-center fw-bold h2-font-size-home">Nos bons plans</h2>
    <div class="row d-flex justify-content-center align-items-center">
        {% for item in articles %}
        <div class="card col-5 col-lg-2 me-2 mt-4">
            <img src="{{ asset("build/images/"~item.artimage~"") }}" class="card-img-top" alt="">
            <div class="card-body">
                <h3 class="card-title">{{ item.artnomproduit }}</h3>
                <div class="d-flex justify-content-between my-2">
                    <div>
                        {% if item.artprixpromo is not null %}
                            <p class="card-text">{{ item.artprixpromo }}€/kg</p>
                        {% elseif item.artprixpromo is null and item.artprixaukg is not null %}
                            <p class="card-text">{{ item.artprixaukg }}€/kg</p>
                        {% elseif item.artprixpromo is null and item.artprixaukg is null and item.artprixunitaire is not null %}
                            <p class="card-text">{{ item.artprixunitaire }}€/piece</p>
                        {% endif %}
                    </div>
                    <div>
                        {% if item.artremise is not null %}
                            <p class="card-promo">-{{ item.artremise }}%</p>
                        {% endif %}
                    </div>
                </div>
                <a href="#" class="btn btn-button-card d-flex justify-content-between align-items-center my-3 my-lg-0"><img src="{{ asset("build/images/cart_white.png") }}" class="icon-card me-3">Ajouter au panier</a>
            </div>
        </div>
        {% endfor %}
    </div>
{% endblock %}
