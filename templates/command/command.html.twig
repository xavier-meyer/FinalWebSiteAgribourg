{% extends 'base.html.twig' %}

{% block title %}Commande{% endblock %}

{% block body %}
    <main>
        <h1 class="h1-font-size text-center my-5 main-color fs-4">{{ summaryOrderTitle }}</h1>
        <p class="fs-4 text-center my-5">{{ messageConfirmationCommand }}</p>
        <section class="container-fluid">
            {%  for item in commande %}
                <div class="row justify-content-center">
                    <div class="col-10 col-md-8 col-xl-6 my-3">
                        <article class="card background-secondary-color">
                            <div class="card-body p-3">
                                <div class="card-text d-flex justify-content-center align-items-start flex-column justify-content-md-around flex-md-row my-3">
                                    <p>
                                        <span class="fw-bold">
                                            Nom:
                                            <span class="fw-normal">
                                                {{ item.name }}
                                            </span>
                                        </span>
                                    </p>
                                    <p>
                                        <span class="fw-bold">
                                            Prix:
                                           <span class="fw-normal">
                                                {{ item.price }} €
                                            </span>
                                        </span>
                                    </p>
                                    <p>
                                        <span class="fw-bold">
                                            Quantité:
                                            <span class="fw-normal">
                                                {{ item.quantity }} {{ item.unit }}
                                            </span>
                                        </span>
                                    </p>
                                </div>
                            </div>
                        </article>
                    </div>
                </div>
            {%  endfor %}
            <div class="row justify-content-center align-items-center">
                <div class="col-10 col-md-8 col-xl-6 my-3">
                    <article class="card background-secondary-color">
                        <div class="card-body p-3">
                            <div class="card-text d-flex justify-content-center align-items-start flex-column justify-content-md-around align-items-md-center flex-md-row my-3">
                                <p>
                                    <span class="fw-bold">
                                        {{ dateOrder }}
                                        <span class="fw-normal">
                                            {{ date }}
                                        </span>
                                    </span>
                                </p>
                                <p>
                                    <span class="fw-bold">
                                        {{ totalPriceOrder }}
                                        <span class="fw-normal">
                                            {{ totalPrice }}
                                        </span>
                                    </span>
                                </p>
                            </div>
                        </div>
                    </article>
                </div>
            </div>
        </section>
    </main>
{% endblock %}
